<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <EditText
        android:id="@+id/fNameTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="104dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="104dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="forename"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lNameTF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719" />

    <EditText
        android:id="@+id/lNameTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="104dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="104dp"
        android:layout_marginStart="65dp"
        android:ems="10"
        android:hint="lastname"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/emailTF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="104dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="104dp"
        android:layout_marginStart="65dp"
        android:ems="10"
        android:hint="email adress"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/oldpasswordTF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/oldpasswordTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="104dp"
        android:layout_marginStart="65dp"
        android:ems="10"
        android:hint="old password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/newpasswordTF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newpasswordTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="104dp"
        android:layout_marginStart="65dp"
        android:ems="10"
        android:hint="new password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/updateBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="107dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="107dp"
        android:layout_marginStart="65dp"
        android:text="Update Changes"
        app:layout_constraintBottom_toTopOf="@+id/addItemBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addItemBtn"
        android:layout_width="211dp"
        android:layout_height="43dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="108dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="108dp"
        android:layout_marginStart="65dp"
        android:text="Add Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>