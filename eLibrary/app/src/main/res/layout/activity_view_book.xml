<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBookActivity">

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="195dp"
        android:layout_height="26dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="108dp"
        android:layout_marginStart="81dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/pagesTextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="196dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="107dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/categoryTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="241dp"
        android:layout_height="47dp"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="58dp"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pagesTextField"
        android:layout_width="195dp"
        android:layout_height="126dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="108dp"
        android:layout_marginStart="81dp"
        android:autoLink="web"
        android:maxLines="15"
        android:scrollHorizontally="true"
        app:layout_constraintBottom_toTopOf="@+id/signOutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>